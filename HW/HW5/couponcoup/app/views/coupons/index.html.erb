<h1>Listing coupons</h1>

<table class="coupon">
  <tr>
    <th>Company</th>
    <th>Deal</th>
    <th>Expiration</th>
    <th>Zip Code</th>
  </tr>


<% @coupons.each do |coupon| %>
  <tr>
    <td><%=h coupon.company %></td>
    <td><%=h coupon.deal %></td>
    <td><%=h coupon.expiration %></td>
    <td><%=h coupon.zip_code %></td>
    <td class="options"><%= link_to 'Show', coupon %>
    <%= link_to 'Edit', edit_coupon_path(coupon) %>
    <%= link_to 'Destroy', coupon, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New coupon', new_coupon_path %>
